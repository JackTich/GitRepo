<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.AuthActivity">

   <include
       layout="@layout/loader"
       android:id="@+id/loaderAuth"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:visibility="gone"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="vertical"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent">
      <com.google.android.material.button.MaterialButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btnMakeAuthorization"
          android:layout_gravity="center_horizontal"
          android:text="@string/auth_and_go_to_your_rep"
          app:iconGravity="textStart"
          android:textSize="12sp"
          android:background="@color/colorPrimary"
          android:textColor="@color/superWhite"
          app:icon="@drawable/ic_github"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_gravity="center_horizontal"
          android:text="@string/or"
          android:alpha="0.5"
          android:textSize="18sp"
          android:textColor="@color/primaryText"/>
      <com.google.android.material.button.MaterialButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/btnShowAllRepo"
          android:background="@color/ghostLight"
          android:layout_marginTop="10dp"
          android:layout_gravity="center_horizontal"
          style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
          android:text="@string/go_to_all_repository"
          app:iconGravity="textStart"
          android:textSize="12sp"
          android:textColor="@color/ghostDark"
          app:icon="@drawable/ic_list"
          />
   </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="14sp"
       android:textColor="@color/primaryText"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginBottom="20dp"
       android:text="@string/author_jacktich"/>

</androidx.constraintlayout.widget.ConstraintLayout>