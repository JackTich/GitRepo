<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgAvatarAuthor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/tvTitleRep"
        app:layout_constraintLeft_toRightOf="@id/imgAvatarAuthor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvDescriptionRep"
        android:maxLines="1"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescriptionRep"
        android:textSize="14sp"
        android:textColor="@color/ghostDark"
        android:lines="2"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleRep"
        app:layout_constraintLeft_toLeftOf="@id/tvTitleRep"/>
</androidx.constraintlayout.widget.ConstraintLayout>