<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerRepositoryItem"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <View
            android:id="@+id/imgAvatarAuthorShimmer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/shimmer_recycle_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tvTitleRepShimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@color/shimmer_recycle_view"
            app:layout_constraintBottom_toTopOf="@id/tvDescriptionRepShimmer"
            app:layout_constraintLeft_toRightOf="@id/imgAvatarAuthorShimmer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tvDescriptionRepShimmer"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer_recycle_view"
            android:textColor="@color/ghostDark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tvTitleRepShimmer"
            app:layout_constraintTop_toBottomOf="@id/tvTitleRepShimmer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>